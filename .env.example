# Supabase Configuration (REQUIRED)
# Copy this file to .env.local and fill in your actual values
# Get these from your Supabase project settings: https://app.supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Weather API Configuration (REQUIRED)
# Required: Weather API (OpenWeatherMap)
NEXT_PUBLIC_WEATHER_API_KEY=your-openweather-api-key

# Backend Configuration (OPTIONAL)
# These control batch sizes for sync operations
# Defaults are shown - adjust for your network conditions
BACKEND_MAX_MESSAGE_BATCH=20
BACKEND_MAX_PULL_LIMIT=100
SYNC_BASE_BACKOFF_MS=5000
SYNC_NORMAL_BATCH_LIMIT=10
SYNC_SATELLITE_BATCH_LIMIT=5
SYNC_ULTRA_BATCH_LIMIT=3

# Admin/debug controls
NEXT_PUBLIC_ENABLE_ADMIN_DEBUG=false
